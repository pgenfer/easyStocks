<Application x:Class="EasyStocks.App.Wpf.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:wpf="clr-namespace:EasyStocks.App.Wpf">
    <Application.Resources>
      <ResourceDictionary>
        <ResourceDictionary.MergedDictionaries>
          <ResourceDictionary>
            <!-- bootstrapper must be in resource dictionary, otherwise it won't be called! -->
            <wpf:Bootstrapper x:Key="Bootstrapper"/>
            <Style x:Key="Headline" TargetType="{x:Type TextBlock}">
              <Style.Setters>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="Margin" Value="0,0,0,5"/>
              </Style.Setters>
            </Style>
            <Style x:Key="Subtext" TargetType="{x:Type TextBlock}">
              <Style.Setters>
                <Setter Property="FontWeight" Value="Normal"/>
                <Setter Property="FontSize" Value="12"/>
              </Style.Setters>
            </Style>
          </ResourceDictionary>
        </ResourceDictionary.MergedDictionaries>
      </ResourceDictionary>
    </Application.Resources>
</Application>
