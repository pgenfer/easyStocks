<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:forms="clr-namespace:Caliburn.Micro.Xamarin.Forms;assembly=Caliburn.Micro.Platform.Xamarin.Forms"
             x:Class="EasyStocks.View.PortfolioSearchView">
  <StackLayout Orientation="Vertical">
    <ContentView
      Margin="5"
      forms:View.Model="{Binding Search}"
      VerticalOptions="Start"/>
    <ContentView
        Margin="5"
        forms:View.Model="{Binding Portfolio}"
        VerticalOptions="Start"/>
  </StackLayout>
</ContentView>