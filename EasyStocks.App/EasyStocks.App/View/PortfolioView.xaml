<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:forms="clr-namespace:Caliburn.Micro.Xamarin.Forms;assembly=Caliburn.Micro.Platform.Xamarin.Forms"
             x:Class="EasyStocks.View.PortfolioView">
  <ListView ItemsSource="{Binding Items}"
            SelectedItem="{Binding SelectedItem}"
            forms:Message.Attach="[Event ItemTapped] = [OnAccountItemSelected]">
    <ListView.ItemTemplate>
      <DataTemplate>
        <ViewCell>
            <Grid Margin="5,0">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
              </Grid.ColumnDefinitions>
            <Label 
              Grid.Column="0"
              VerticalTextAlignment="Center"
              FontAttributes="Bold"
              Text="{Binding ShareName}"
              FontSize="Medium"/>
            <Label
              Grid.Column="1"
              VerticalTextAlignment="Center"
              HorizontalTextAlignment="End"
              FontAttributes="Bold"
              FontSize="Medium"
              Text="{Binding ChangePercentString}"
              TextColor="{Binding ChangeOfCurrentRate,Converter={StaticResource RateChangeToColor}}"/>
            </Grid>
          </ViewCell>
      </DataTemplate>
    </ListView.ItemTemplate>
  </ListView>
</ContentView>